{% extends 'base.html.twig' %}

{% block title %}Modifier un item{% endblock %}

{% block body %}
    <a href="{{ path('item_index') }}">Retour</a>
    <br><br>
    <div class="page-header">
        <h1>Modifier un item</h1>
    </div>

    {#    {{ form_start(form) }}#}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>
    <div class="col-lg-6">
        {{ form_start(form) }}
            <div class="form-group row">
                {{ form_label(form.name, 'Nom', {'label_attr':{'class': ''}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
                
            <div class="form-group row">
            {{ form_label(form.image, 'Image', {'label_attr':{'class': ''}}) }}
            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group row">
            {{ form_label(form.api_id, 'API id', {'label_attr':{'class': ''}}) }}
            {{ form_widget(form.api_id, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
            </div>
            
            <div class="form-group row">
            {{ form_label(form.price_to_sell, 'Prix à vendre (en pièce de cuivre)', {'label_attr':{'class': ''}}) }}
            {{ form_widget(form.price_to_sell, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group row">
            <button class="btn btn-primary">{{ button_label|default('Modifier') }}</button>
            </div>
            {{ form_end(form) }}
    </div>


    

    {{ include('item/_delete_form.html.twig') }}
{% endblock %}
