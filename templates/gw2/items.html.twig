{% extends 'base.html.twig' %}

{% block title %}Objets GW2{% endblock %}

{% block body %}
    <h1>Items</h1>
    <div id="tableGw2Items">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Nom</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr class="">
                        <td class="cell_icon"><img src="{{ item.icon }}" alt="" class="item_icon"></td>
                        <td class="cell_name">{{ item.name }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table> 
    </div>
{% endblock %}